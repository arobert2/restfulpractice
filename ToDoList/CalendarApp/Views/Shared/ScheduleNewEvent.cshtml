@model CalendarApp.Models.ScheduleEventDto
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ 
    var datetimestr = DateTime.Now.ToString();
    var date = datetimestr.Remove(datetimestr.LastIndexOf(':') - 5, 11);

    var time = datetimestr.Substring(datetimestr.LastIndexOf(':') - 5);
}

<div>
    <form asp-route="events" method="post">
        <div class="schedule-info-frame">
            <label asp-for="Title"></label><br />
            <input asp-for="Title" type="text" /><br />

            <label asp-for="Location"></label><br />
            <input asp-for="Location" type="text" /><br />

            <label asp-for="Description"></label><br />
            <input asp-for="Description" type="text" /><br />
        </div>
        <div class="date-time-frame">
            <label asp-for="StartDate"></label><br />
            <input asp-for="StartDate" type="date" value="@date" /><br />
            <input asp-for="StartTime" type="time" value="@time" />
        </div>
        <div class="date-time-frame">
            <label asp-for="EndDate"></label><br />
            <input asp-for="EndDate" type="date" value="@date" /><br />
            <input asp-for="EndTime" type="time" value="@time" />
        </div>

        <label asp-for="UserStatus"></label>
        <input asp-for="UserStatus" type="text" />

        <button type="submit">Submit</button>
        <button type="button">Cancel</button>
    </form>
</div>
@model CalendarApp.Models.ScheduleCalendarEventDto
@using CalendarApp.ExtensionMethods;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ 
    var datetime = DateTime.Now.RoundToQuarter();
    var date = datetime.ApproxDate();
    var time = datetime.Time24();
}

<div>
    <form asp-action="ScheduleNewEvent" asp-controller="Event" method="post" enctype="application/x-www-form-urlencoded">
        <div class="schedule-info-frame">
            <label asp-for="Title"></label><br />
            <input asp-for="Title" type="text" /><br />

            <label asp-for="Location"></label><br />
            <input asp-for="Location" type="text" /><br />
        </div>
        <div class="schedule-info-frame">
            <label asp-for="UserStatus"></label>
            <select asp-for="UserStatus">
                <option value="0">Busy</option>
                <option value="1">Free</option>
                <option value="2">Out Of Office</option>
                <option value="3">In Meeting</option>
            </select><br />
            <label asp-for="Description"></label><br />
            <input asp-for="Description" type="text" /><br />
        </div>
        <div class="date-time-frame">
            <label asp-for="StartDate"></label><br />
            <input asp-for="StartDate" type="date" value="@date" /><br />
            <input asp-for="StartTime" type="time" value="@time" />
        </div>
        <div class="date-time-frame">
            <label asp-for="EndDate"></label><br />
            <input asp-for="EndDate" type="date" value="@date" /><br />
            <input asp-for="EndTime" type="time" value="@time" />
        </div>


        <button type="submit">Submit</button>
        <button type="button">Cancel</button>
    </form>
</div>